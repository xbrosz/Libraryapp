@model FE.Models.Admin.AdminAuthorIndexViewModel

<h4>Admin Authors</h4>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Birth date</th>
        </tr>
    </thead>
    <tbody>
        <a class="btn btn-secondary my-1" href="@Url.Action("Add", "AdminAuthor")">Add</a>
        @foreach (var author in Model.Authors)
        {
            <tr>
                <td>@author.Item1.Name</td>
                <td>@author.Item1.BirthDate.ToString("dd-MM-yyyy")</td>

                <td>
                    <a class="btn btn-secondary my-1" href="@Url.Action("Edit", "AdminAuthor", new { authorId = author.Item1.Id })">Edit</a>

                    @if (author.Item2)
                    {
                        <a class="btn btn-secondary my-1" href="@Url.Action("Delete", "AdminAuthor", new { authorId = author.Item1.Id })">Delete</a>
                    } else
                    {
                        <a class="btn btn-secondary my-1" onclick="showAlert()">Delete</a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
        function showAlert() {
        var myText = "This author cannot be deleted because books of this author exist in database!";
        alert (myText);
      }
        </script>
}