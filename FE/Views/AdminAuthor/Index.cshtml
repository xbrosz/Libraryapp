@model FE.Models.Admin.AdminAuthorIndexViewModel

<h4>Admin Authors</h4>



<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Birth date</th>
        </tr>
    </thead>
    <tbody>
        <a class="btn btn-secondary my-1" href="@Url.Action("Add", "AdminAuthor")">Add</a>
        @foreach (var author in Model.Authors)
        {
            <tr>
                <td>@author.Name</td>
                <td>@author.BirthDate.ToString("dd-MM-yyyy")</td>

                <td>
                    <a class="btn btn-secondary my-1" href="@Url.Action("Edit", "AdminAuthor", new { authorId = author.Id })">Edit</a>

                    <a class="btn btn-secondary my-1" href="@Url.Action("Delete", "AdminAuthor", new { authorId = author.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

