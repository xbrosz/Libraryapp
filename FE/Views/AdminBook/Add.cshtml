@model FE.Models.Admin.AdminAddBookViewModel
<link href="~/jqueryui/jquery-ui.css" rel="stylesheet" />

<h1>Add new book</h1>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("AddAuthor", "AdminBook", Model, FormMethod.Post, true, new { @class = "form-inline" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(null, new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(x => x.Title)
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
            </div>
            <hr />
            <div class="form-group">
                @Html.LabelFor(x => x.Release)
                <input asp-for="Release" type="text" class="form-control" placeholder="BirthDate" />
                @Html.ValidationMessageFor(x => x.Release, null, new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        }
    </div>
</div>
@section scripts{
    <script src="~/jqueryui/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#Release").datepicker({ dateFormat: 'dd-mm-yy' });
        });
    </script>
}

