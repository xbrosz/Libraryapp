@model RatingIndexViewModel

<h4>Ratings for book @Model.bookTitle</h4>
<table class="table">
    <thead>
        <tr>
            <th>BookTitle</th>
            <th>RatingNumber</th>
            <th>Comment</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rating in Model.ratings)
        {
            <tr>
                <td>@rating.BookTitle</td>
                <td>@rating.RatingNumber</td>
                <td>@rating.Comment</td>
                <td>
                    @using (Html.BeginForm("Delete", "AdminRating", new { id = rating.Id }, FormMethod.Post, true, new { @class = "form-inline" }))
                    {
                        <a class="btn btn-secondary my-1" href="@Url.Action("Edit", "AdminRating", new { Id = rating.Id })">Edit</a>
                        <input class="btn btn-secondary my-1" type="submit" value="Delete" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>