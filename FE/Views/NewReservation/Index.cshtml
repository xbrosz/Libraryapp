@model NewReservationModel
<h4>New reservaion</h4>
<div class="row">
    <div class="col-md-4">
        <table class="table">
        <tbody>
                <tr>
                    <td>Book title:</td>
                    <td>@Model.BookTitle</td>
                </tr>
                <tr>
                    <td>Branch: </td>
                    <td><select asp-for="SelectedBranch" id="inputState" class="form-control">
                        <option selected>Choose branch</option>
                            @for (int i = 0; i < @Model.Branches.Count(); i++)
                                {
                                    <option value="@Model.Branches.ElementAt(i)">@Model.Branches.ElementAt(i)</option>
                                }
                        </select></td>
                </tr>
                <tr>
                    <td>From: </td>
                    <td><input asp-for="FromDate" type="text" disabled class="form-control" placeholder="Start date" /></td>
                </tr>
                <tr>
                    <td>To: </td>
                    <td><input asp-for="ToDate" type="text" disabled class="form-control" placeholder="End date" /></td>
                </tr>
        </tbody>
        </table>
        @section scripts{
        <script src="~/jqueryui/jquery-ui.js"></script>
        <script>
            $(function () {
                $("#FromDate").datepicker({ 
                    dateFormat: 'dd-mm-yy',
                    minDate: "+1",
                    
                });
            });
        </script>
        <script>
            $(function () {
                $("#ToDate").datepicker({ dateFormat: 'dd-mm-yy' });
            });
        </script>
    }
    </div>
</div>
<a class="btn btn-secondary my-1" href="@Url.Action("Add", "NewReservation", new {Model.Id, Model.SelectedBranch, Model.FromDate, Model.ToDate})">Reserve book</a>
