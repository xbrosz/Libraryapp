@model RatingIndexViewModel

@if (this.User.IsInRole("User"))
{
    <h4>Awaiting ratings</h4>
    <table class="table">
        <thead>
            <tr>
                <th>BookTitle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rating in Model.awaitingRatings)
            {
                <tr>
                    <td>@rating.BookTitle</td>
                    <td>
                        <a class="btn btn-secondary my-1" href="@Url.Action("Add", new { rating.BookId, rating.BookTitle })">Add rating</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}


<h4>Written ratings</h4>
<table class="table">
    <thead>
        <tr>
            <th>BookTitle</th>
            <th>RatingNumber</th>
            <th>Comment</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rating in Model.ratings)
        {
            <tr>
                <td>@rating.BookTitle</td>
                <td>@rating.RatingNumber</td>
                <td>@rating.Comment</td>
                <td>
                    <a class="btn btn-secondary my-1" href="@Url.Action("Edit", new { Id = rating.Id })">Edit</a>

                </td>
            </tr>
        }
    </tbody>
</table>