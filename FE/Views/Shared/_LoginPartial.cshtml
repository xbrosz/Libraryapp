@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="@Url.Action("Index", "User")">Account</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" href="@Url.Action("Logout", "User")">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="@Url.Action("Register", "User")">Sign Up</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" href="@Url.Action("Login", "User")">Sign In</a>
        </li>
        }
</ul>
